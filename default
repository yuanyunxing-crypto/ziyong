###
map $server_port $target_port {
    81 89;
    82 83;
    8082 8083;
}
map $server_port $backend {
    89 http://192.168.2.13:80;
    83 http://192.168.2.8:80;
    8083 http://192.168.2.1:8081;
}

server {
    listen 81 default_server;
    listen [::]:81 default_server;
    server_name _;
    return 444;
}

server {
    listen 82 default_server;
    listen [::]:82 default_server;
    server_name _;
    return 444;
}

server {
    listen 8082 default_server;
    listen [::]:8082 default_server;
    server_name _;
    return 444;
}

server {
    listen 81;
    listen 82;
    server_name oa.tgeektech.com oa.tgeektech.cn;

    location = /jxctop {
        return 301 https://oa.tgeektech.com:$target_port/jxctop/;
    }


    return 301 https://oa.tgeektech.com:$target_port$request_uri;
}


server {
    listen 8082;
    server_name oa.tgeektech.com oa.tgeektech.cn;

    return 301 https://oa.tgeektech.com:$target_port$request_uri;
}


server {
    listen 89 ssl;
    server_name oa.tgeektech.com;

    # SSL 示例（按你自己的证书）
    ssl_certificate /etc/ssh/STAR.tgeektech.com.crt;
    ssl_certificate_key /etc/ssh/STAR.tgeektech.com.key;

    # 通用代理头
    proxy_set_header Host              $host;
    proxy_set_header X-Real-IP         $remote_addr;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;

    # 可选：再补一次 /（防止直连 HTTPS）
    location = /jxctop {
        return 301 /jxctop/;
    }

    location / {
        proxy_pass $backend;
        proxy_redirect off;
    }
}

server {
    listen 83 ssl;
    server_name oa.tgeektech.com;

    # SSL 示例（按你自己的证书）
    ssl_certificate /etc/ssh/STAR.tgeektech.com.crt;
    ssl_certificate_key /etc/ssh/STAR.tgeektech.com.key;

    # 通用代理头
    proxy_set_header Host              $host;
    proxy_set_header X-Real-IP         $remote_addr;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;

    # 可选：再补一次 /（防止直连 HTTPS）
    location = /jxctop {
        return 301 /jxctop/;
    }

    location / {
        proxy_pass $backend;
        proxy_redirect off;
    }
}


# HTTPS 默认服务器 - 拒绝所有 IP 访问
server {
    listen 83 ssl default_server;
    listen 89 ssl default_server;
    listen 8083 ssl default_server;
    listen [::]:83 ssl default_server;
    listen [::]:89 ssl default_server;
    listen [::]:8083 ssl default_server;
    server_name _;

    ssl_certificate /etc/ssh/STAR.tgeektech.com.crt;
    ssl_certificate_key /etc/ssh/STAR.tgeektech.com.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    return 444;
}


# HTTPS主服务
server {
    listen 89 ssl http2;
    listen 83 ssl http2;
    listen 8083 ssl http2;
    server_name oa.tgeektech.com;

    ssl_certificate     /etc/ssh/STAR.tgeektech.com.crt;
    ssl_certificate_key /etc/ssh/STAR.tgeektech.com.key;

    ssl_protocols TLSv1.2 TLSv1.3;

    add_header Strict-Transport-Security "max-age=63072000" always;

    location / {
        proxy_pass $backend;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;

        proxy_http_version 1.1;
        proxy_buffering off;
        proxy_redirect off;

        proxy_connect_timeout 30s;
        proxy_read_timeout 120s;
    }
}

